<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_enabled="false">
		<shape  android:shape="rectangle" android:padding="5dp">
			<solid android:color="@color/primary_gray" />
			<corners android:bottomRightRadius="5dp" android:bottomLeftRadius="5dp" android:topLeftRadius="5dp" android:topRightRadius="5dp" />
		</shape>
	</item>
	<item android:state_pressed="false">
		<shape  android:shape="rectangle" android:padding="5dp">
			<solid android:color="@color/primary_blue" />
			<corners android:bottomRightRadius="5dp" android:bottomLeftRadius="5dp" android:topLeftRadius="5dp" android:topRightRadius="5dp" />
		</shape>
	</item>
	<item android:state_pressed="true">
		<shape  android:shape="rectangle" android:padding="5dp">
			<solid android:color="@color/secondary_blue" />
			<corners android:bottomRightRadius="5dp" android:bottomLeftRadius="5dp" android:topLeftRadius="5dp" android:topRightRadius="5dp" />
		</shape>
	</item>
</selector>